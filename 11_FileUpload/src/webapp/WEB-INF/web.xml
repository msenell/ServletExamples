<web-app>
    <servlet>
        <servlet-name>FileUpload</servlet-name>
        <servlet-class>com.org.servletexamples.FileUploader</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FileUpload</servlet-name>
        <url-pattern>/FileUpload</url-pattern>
    </servlet-mapping>
    
    <context-param>
        <description>Yüklenen dosyaların kaydedileceği dizin</description>
        <param-name>file-upload</param-name>
        <param-value>
            C:\tomcat\webapps\11_FileUpload\data\
        </param-value>
    </context-param>
</web-app>